 @{
     ViewData["Title"] = " My tasks " ;
 }
 
 
 
 <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link href="~/css/app.css" rel="stylesheet">


<section id="list">
            <button id="btnDetails" class="btn btn-info"> Show/hide details</button>

            <h3>your pending tasks </h3>
            <div id="tasksContainer" class="task-list">
                <!-- Displayingg pending task -->
                 </div>


            <h3> Your done Tasks</h3>
            <div id="doneContainer" class="done-task-list">
                 <!-- Displayingg done task -->
            </div>


        </section>


        <section id="details">
            <h3>Task information </h3>

            <div id="errorTitle" class="alert alert-danger hide">
                <b> Error: Title can not be empty. </b>
            </div>
       
       
            <div class="control">
                <label>Title</label>
                <input id="txtTitle" type="text" class="form-control">
            </div>


              <div class="control">
                <label>Description</label>
                <textarea class="form-control" id="txtDesc" rows="4"></textarea>
            </div> 
            
            
              <div class="control">
                <label>Important </label>
                <i class="fas fa-star icon-important somethingElse"></i>
            </div>
           
           
           <div class="control">
                <label>Due date </label>
                <input id="txtDuedate" type="datetime-local" class="form-control">
            </div>

        

            <div class="control">
                <label>Alert Text </label>
                <select id="selAlert" class="form
            -control">
                    <option value="1"> Don't forget to: </option>
                    <option value="2"> Stop </option>
                    <option value="3"> Star: </option>
                    <option value="4"> Get more coffee: </option>
                </select>
            </div>

            <div class="control">
                <label>Location </label>
                <input id="txtLocation" type="text" class="form-control">
            </div>

            <div class="control">
                <button id="btnSave" class="btn btn-primary"> Save task </button>
            </div>

        </section>

         <script src="~/js/task.js"></script>
         <script src="~/js/app.js"></script>
